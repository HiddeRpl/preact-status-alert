{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2017"
    ],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "rootDirs": [
      "lib",
      "test",
      "docs"
    ],
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "jsx": "react",
    "jsxFactory": "h"
  },
  "files": [
    "./node_modules/preact/dist/preact.d.ts"
  ],
  "include": [
    "lib/**/*",
    "docs/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
