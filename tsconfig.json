{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2017"
    ],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "rootDir": "lib",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "jsx": "react",
    "jsxFactory": "h",
    "skipLibCheck": true
  },
  "files": [
    "./node_modules/preact/dist/preact.d.ts"
  ],
  "include": [
    "lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
